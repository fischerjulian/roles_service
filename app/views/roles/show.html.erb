<h1>Role</h1>
<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @role.title %>
</p>

<p>
<strong>Tasks</strong>
</p>
<ul class="list-group">
<% @role.tasks.each do |t| %>
  <% next if t.new_record? %>
  <li class="list-group-item"><%= link_to t.title, task_path(t) %></li>
<% end %>
</ul>

<h3>Add Task</h3>
<%= render 'tasks/form' %>

<br/>
<br/>
<%= link_to 'Edit', edit_role_path(@role) %> |
<%= link_to 'Back', roles_path %>
